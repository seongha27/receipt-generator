# 백엔드 API 서버 설정
PORT=8000
ALLOWED_ORIGINS=http://www.adsketch.info,https://www.adsketch.info,http://localhost:3000,http://127.0.0.1:3000
LOG_LEVEL=INFO

# Rate Limiting 설정
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_PERIOD=60  # seconds

# Redis 설정 (선택사항, Rate Limiting을 위해)
REDIS_URL=redis://localhost:6379/0

# Selenium 설정
SELENIUM_HEADLESS=true
SELENIUM_TIMEOUT=30  # seconds

# 영수증 설정
RECEIPT_MAX_MENU_ITEMS=50
RECEIPT_IMAGE_DPI=300

# 크롤링 설정
CRAWLING_MAX_RETRIES=3
CRAWLING_DELAY_SECONDS=2

# 임시 파일 정리 주기 (초)
TEMP_FILE_CLEANUP_INTERVAL=3600

# 프론트엔드 환경변수 (Vite 기반)
VITE_API_BASE_URL=http://localhost:8000/api/v1

# 배포 환경 설정 (Fly.io)
FLY_APP_NAME=receipt-generator
FLY_REGION=nrt

# 배포 환경 설정 (Render)
RENDER_SERVICE_NAME=receipt-generator-api

# Chrome/크롤링 설정 (Docker 환경)
CHROME_DRIVER_PATH=
CHROME_BINARY_PATH=

# 보안 설정
SECRET_KEY=your-secret-key-here-change-in-production
API_KEY=your-api-key-here  # 추후 API 인증 구현시 사용